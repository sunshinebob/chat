<view class="card"><view class="card-header"><view class="user"><image class="avatar" src="{{item.userpic}}" data-event-opts="{{[['tap',[['openSpace',['$event']]]]]}}" bindtap="__e"></image><view class="info"><view class="nick-name">{{item.username}}</view><text class="time">{{item.newstime}}</text></view></view><block wx:if="{{!item.isFllow}}"><view class="btn animated fast" hover-class="jello" data-event-opts="{{[['tap',[['fllow',['$event']]]]]}}" bindtap="__e">关注</view></block></view><view data-event-opts="{{[['tap',[['openDetail',['$event']]]]]}}" class="card-content" bindtap="__e"><view class="title h4">{{item.title}}</view><image class="title-pic" src="{{item.titlepic}}" mode></image></view><view class="card-footer"><view class="{{['item animated',(item.support.type==='support')?'support-active':'']}}" hover-class="jello text-main" data-event-opts="{{[['tap',[['doSupport',['support']]]]]}}" bindtap="__e"><text class="iconfont icon-dianzan"></text><text class="ml-2">{{item.support.support_count>0?item.support.support_count:'赞'}}</text></view><view class="{{['item animated',item.support.type==='unsupport'?'support-active':'']}}" hover-class="jello text-main" data-event-opts="{{[['tap',[['doSupport',['unsupport']]]]]}}" bindtap="__e"><text class="iconfont icon-cai"></text><text class="ml-2">{{item.support.unsupport_count>0?item.support.unsupport_count:'踩'}}</text></view><view class="item animated" hover-class="jello text-main"><text data-event-opts="{{[['tap',[['openDetail',['$event']]]]]}}" class="iconfont icon-xiaoxi" bindtap="__e"></text><text class="ml-2">{{item.comment_count>0?item.comment_count:'消息'}}</text></view><view class="item animated" hover-class="jello text-main"><text class="iconfont icon-fenxiang"></text><text class="ml-2">{{item.share_num>0?item.share_num:'分享'}}</text></view></view></view>